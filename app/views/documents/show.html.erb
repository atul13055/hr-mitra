<div class="col-lg-12">
	<div class="card rounded-0 mt-5 mb-5">
		<div class="card-body">
			<h2 class="text-center">Document Deatils  Deatils  </h2>
			<div class="row">
				<div class="col-lg-6">
				<% if @document.image.attached? %>
				 <%= image_tag @document.image %>
                <% end %>
				 <p class="lead"><strong> Name: - </strong><%= @document.name%></p>
	             <p class="lead"><strong> Doc_Type: - </strong><%= @document.doc_type %></p>
	              <p class="lead"><strong> Employee : - </strong><%= @document.employee.name  %></p>
				</div>
			</div>
			<%= link_to "Back To Document ", documents_path, class: "btn btn-outline-primary btn-lg"%>
			<%= link_to "Edit Employee", edit_document_path(@document), class: "btn btn-outline-danger btn-lg"%>
		</div>
	</div>
</div>